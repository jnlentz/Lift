<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/reps"
        app:layout_constraintBottom_toBottomOf="@+id/ex_reps"
        app:layout_constraintEnd_toStartOf="@+id/ex_reps"
        app:layout_constraintTop_toTopOf="@+id/ex_reps" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/interval"
        app:layout_constraintBottom_toBottomOf="@+id/ex_interval"
        app:layout_constraintEnd_toStartOf="@+id/ex_interval"
        app:layout_constraintTop_toTopOf="@+id/ex_interval" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/increment"
        app:layout_constraintBottom_toBottomOf="@+id/ex_increment"
        app:layout_constraintEnd_toStartOf="@+id/ex_increment"
        app:layout_constraintTop_toTopOf="@+id/ex_increment" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/weight"
        app:layout_constraintBottom_toBottomOf="@+id/ex_weight"
        app:layout_constraintEnd_toStartOf="@+id/ex_weight"
        app:layout_constraintTop_toTopOf="@+id/ex_weight" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/sets"
        app:layout_constraintBottom_toBottomOf="@+id/ex_sets"
        app:layout_constraintEnd_toStartOf="@+id/ex_sets"
        app:layout_constraintTop_toTopOf="@+id/ex_sets" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/name"
        app:layout_constraintBottom_toBottomOf="@+id/ex_name"
        app:layout_constraintEnd_toStartOf="@+id/ex_name"
        app:layout_constraintTop_toTopOf="@+id/ex_name" />

    <EditText
        android:id="@+id/ex_increment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/ex_interval"
        app:layout_constraintEnd_toEndOf="@+id/ex_weight"
        app:layout_constraintTop_toBottomOf="@+id/ex_weight" />

    <EditText
        android:id="@+id/ex_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ex_reps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ex_reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/ex_sets"
        app:layout_constraintEnd_toEndOf="@+id/ex_name"
        app:layout_constraintTop_toBottomOf="@+id/ex_name" />

    <EditText
        android:id="@+id/ex_sets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/ex_weight"
        app:layout_constraintEnd_toEndOf="@+id/ex_reps"
        app:layout_constraintTop_toBottomOf="@+id/ex_reps" />

    <EditText
        android:id="@+id/ex_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/ex_increment"
        app:layout_constraintEnd_toEndOf="@+id/ex_sets"
        app:layout_constraintTop_toBottomOf="@+id/ex_sets" />

    <EditText
        android:id="@+id/ex_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ex_increment"
        app:layout_constraintTop_toBottomOf="@+id/ex_increment" />

</androidx.constraintlayout.widget.ConstraintLayout>